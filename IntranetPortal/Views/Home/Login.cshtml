@using IntranetPortal.Models
@model  LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}



<div class="pcoded-inner-content" style="padding-top:100px;height:200px;">
<div class="main-body">
<div class="page-wrapper">
<div class="page-body">

<div class="row">

<div class="col-xl-2 col-md-12">
<div class="card proj-t-card">

</div>

<h6 class="pt-badge bg-c-yellow"></h6>
</div>

<div class="col-xl-6     col-md-12">
<div class="card proj-t-card">
<div class="card-body">
<div class="row align-items-center m-b-30">
<div class="col-auto">

</div>
<div class="col p-l-0">
<h6 class="m-b-5">Login Credentials</h6><hr />
<h6 class="m-b-0 text-c-red"><p></p></h6>

                                        @using (Html.BeginForm("Processlogin", "Home", FormMethod.Post, new { @class = "sign-up-form form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            

<div class="form-group row">
                                        
<div class="col-sm-2" style="padding-bottom:8px;">
<i class="far fa-user text-primary f-30"></i>
</div>
<div class="col-sm-10">
                                                    @Html.TextBoxFor(m => m.PFNumber, new { @placeholder = "TPF0366", @name = "PFNumber", @class = "form-control form-control-round", @id = "Username",  @required = "true" })
</div>

<div class="col-sm-2">
<i class="fa fa-lock text-primary f-30"></i>
</div>
<div class="col-sm-10">
                                                        @Html.TextBoxFor(m => m.Password, new { @placeholder = "Password", @name = "Password", @class = "form-control form-control-round", @id = "Username", @type = "password", @required = "true" })

</div>

<div class="col-sm-12" style="padding-top:20px;margin-left:70%;">
<button class="btn btn-primary btn-round waves-effect waves-light" type="submit">Login</button>
</div>
                                                
                                            </div>
                                            <div style="color:red"> @ViewBag.Error</div>
}


</div>
</div>
<div class="row align-items-center text-center">

<h6 class="pt-badge bg-c-yellow"></h6>
</div>
</div>
</div>



</div>
<div class="col-xl-4 col-md-12">



</div>
</div>
</div>
</div>
</div></div>



