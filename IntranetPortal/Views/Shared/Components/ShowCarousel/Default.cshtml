@model IEnumerable<FrontEndSlider>

<div class="carousel-inner" role="listbox">
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
        i++;
        var active = i == 1 ? "active" : "";
        <div class="carousel-item @active">
            <img class="d-block img-fluid w-100" src="@Url.Content(@item.ImageFile)" alt="">
            <font style="float:none; text-align:end; font-size:10px;">
                @item.Description
            </font>
        </div>
    }
</div>